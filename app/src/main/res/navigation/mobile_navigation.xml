<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.findmypet.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_progression"
        android:name="com.example.findmypet.ui.progression.ProgressionFragment"
        android:label="@string/title_progression"
        tools:layout="@layout/fragment_progression" />

    <fragment
        android:id="@+id/navigation_petcard"
        android:name="com.example.findmypet.ui.petcard.PetcardFragment"
        android:label="@string/title_petcard"
        tools:layout="@layout/fragment_petcard" />

    <fragment
        android:id="@+id/navigation_doctor"
        android:name="com.example.findmypet.ui.doctor.DoctorFragment"
        android:label="@string/title_doctor"
        tools:layout="@layout/fragment_doctor" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.findmypet.ui.account.AccountFragment"
        android:label="@string/title_account"
